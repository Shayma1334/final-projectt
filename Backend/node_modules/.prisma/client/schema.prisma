generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id                Int                 @id @default(autoincrement())
  name              String
  email             String              @unique
  password          String
  imageUrl          String?
  address           String
  phone             String
  Cart              Cart[]
  DeliveryBoyRating DeliveryBoyRating[]
  dishRatings       DishRating[]
  orders            Order[]
}

model DeliveryBoy {
  id                Int                 @id @default(autoincrement())
  name              String
  email             String              @unique
  password          String
  imageUrl          String?
  bio               String
  phone             String
  DeliveryBoyRating DeliveryBoyRating[]
  orders            Order[]
}

model Dish {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  price       Float
  imageUrl    String?
  chefId      Int
  CartItem    CartItem[]
  Chef        Chef         @relation(fields: [chefId], references: [id])
  ratings     DishRating[]
}

model Order {
  id            Int          @id @default(autoincrement())
  status        String
  chefId        Int
  clientId      Int
  deliveryBoyId Int?
  totalAmount   Float
  Chef          Chef         @relation(fields: [chefId], references: [id])
  client        Client       @relation(fields: [clientId], references: [id])
  deliveryBoy   DeliveryBoy? @relation(fields: [deliveryBoyId], references: [id])
}

model DishRating {
  id       Int     @id @default(autoincrement())
  clientId Int
  dishId   Int
  rating   Int
  comment  String?
  client   Client  @relation(fields: [clientId], references: [id])
  dish     Dish    @relation(fields: [dishId], references: [id])
}

model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Cart {
  id       Int        @id @default(autoincrement())
  clientId Int
  Client   Client     @relation(fields: [clientId], references: [id])
  CartItem CartItem[]
}

model CartItem {
  id       Int  @id @default(autoincrement())
  quantity Int
  cartId   Int
  dishId   Int
  Cart     Cart @relation(fields: [cartId], references: [id])
  Dish     Dish @relation(fields: [dishId], references: [id])
}

model Chef {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  imageUrl String?
  phone    String
  Dish     Dish[]
  Order    Order[]
}

model DeliveryBoyRating {
  id            Int         @id @default(autoincrement())
  clientId      Int
  deliveryBoyId Int
  rating        Int
  comment       String?
  Client        Client      @relation(fields: [clientId], references: [id])
  DeliveryBoy   DeliveryBoy @relation(fields: [deliveryBoyId], references: [id])
}
